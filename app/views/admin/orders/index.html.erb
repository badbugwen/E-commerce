<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to'Order list', admin_orders_path, class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to'Product list', admin_root_path, class: "nav-link" %>
    </li>
  </ul>

  <table class="table table-hover">
     <thead class="thead-light ">
      <tr>
        <th>Order Number</th>
        <th>Price</td>
        <th>Payment status</td>
        <th>Shipping status</td>
        <th>Order Details</td>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          #<%= order.sn %>
        </th>
        <td>
          $<%= order.price%>
        </td>
        <td>
          order.payment_status
        </td>    
        <td>
          order.Shipping_status
        </td>
        <td><%= link_to 'Edit Detail', edit_admin_order_path(order) %>    
        </td>  
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="container pagination justify-content-center" >
    <%= paginate @orders, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
  </div>
</div>